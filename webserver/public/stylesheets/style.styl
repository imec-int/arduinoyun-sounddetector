offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color white
	position relative
	color offblack
	font-size 16px

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none

.content
	left 100px
	top 100px

	.soundbar
		border 1px solid black
		width 40px
		height 200px
		.fill
			bottom 0px
			position absolute
			left 0px
			width 100%
			height 40%
			background-color #b40000




// on smartphones:
@media screen and (max-width: 768px)
	body
		font-size 12px
