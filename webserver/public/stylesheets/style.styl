@import common


.title
	position absolute
	left 20px
	top 0px
	font-size 80px
	font-weight 700
	color offblacktransparant

.menu
	position absolute
	left 20px
	top 120px
	width 250px
	font-weight 400
	.channelmenuitem
		height 30px
		line-height 30px
		padding-left 10px
		background-color offblacktransparant
		color white
		width 100%
		border-bottom 1px solid shadowcolor
		cursor pointer

		.soundstate
			border-radius 50%
			height 20px
			width 20px
			position absolute
			top 5px
			right 5px
			background-color gray

	.channelmenuitem.active
		background-color highlightcolor

	.channelmenuitem.soundon
		.soundstate
			background-color red

.maincontent
	position absolute
	left 290px
	top 120px
	right 20px

.channelview
	.name
		background-color highlightcolor
		height 30px
		line-height 30px
		width 100%
		font-weight 400
		color white
		padding-left 10px

	.deactivatesoundgraph
		display none

	.soundgraph
		position absolute
		top 100px
		left 0px
		right 320px
		height 300px
		margin-bottom 20px
		background-color #c8c8c8

	.settings
		position absolute
		top 100px
		right 0px
		width 300px
		label
			font-size 15px


.channelview.soundgraphactive
	.activatesoundgraph
		display none
	.deactivatesoundgraph
		display inline-block







