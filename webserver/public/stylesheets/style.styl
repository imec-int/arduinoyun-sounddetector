@import common

body
	>.title
		position absolute
		left 20px
		top 0px
		font-size 80px
		font-weight 700
		color offblacktransparant

.menu
	position absolute
	left 20px
	top 120px
	width 250px
	font-weight 400
	.channelmenuitem
		height 30px
		line-height 30px
		padding-left 10px
		background-color offblacktransparant
		color white
		width 100%
		border-bottom 1px solid shadowcolor
		cursor pointer

		.soundstate
			border-radius 50%
			height 20px
			width 20px
			position absolute
			top 5px
			right 5px
			background-color gray

	.channelmenuitem.active
		background-color highlightcolor

	.channelmenuitem.soundon
		.soundstate
			background-color red

.maincontent
	position absolute
	left 290px
	top 120px
	right 20px

.channelview
	.name
		background-color highlightcolor
		height 30px
		line-height 30px
		width 100%
		font-weight 400
		color white
		padding-left 10px

	.channelnamebox
		position absolute
		left 0px
		top 40px
		right 500px
		height 32px

		>input.channelname // has to be in a container, 'cause right 500px doesn't work on an input element
			width 100%
			height 100%
			padding-left 10px
			padding-right 10px
			font-size 14px

	button.updatechannelname
		position absolute
		top 40px
		right 320px
		width 170px

	.activatesoundgraph, .deactivatesoundgraph
		position absolute
		top 110px
		left 0px

	.deactivatesoundgraph
		display none

	.soundgraph
		position absolute
		top 150px
		left 0px
		right 320px
		height 300px
		margin-bottom 20px
		background-color #c8c8c8

	.settings
		position absolute
		top 150px
		right 0px
		width 300px
		label
			font-size 15px

		.silencesettings
			color black
		.soundsettings
			color highlightcolor

	.httpevents
		position absolute
		top 470px
		left 0px
		right 320px
		height 550px
		font-size 14px

		>.title
			font-weight 700
			margin-bottom 10px
			font-size 16px

		.httpevent
			margin-bottom 20px

			.type
				margin-top 10px
				margin-bottom 10px

			.endpoint
				width 100%
				margin-bottom 10px

			.httpbody
				width 100%
				height 100px

		.httpevent.onsound
			color highlightcolor





.channelview.soundgraphactive
	.activatesoundgraph
		display none
	.deactivatesoundgraph
		display inline-block







